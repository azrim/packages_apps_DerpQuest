<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/lockscreen_smart_media_title" >

    <com.derp.support.preference.SystemSettingSwitchPreference
        android:key="synth_smart_media"
        android:title="@string/synth_smart_media_title"
        android:summary="@string/synth_smart_media_summary"
        android:defaultValue="true" />

    <PreferenceCategory
        android:key="smart_media_artwork_blur_category"
        android:title="@string/smart_media_artwork_blur_category_title">
        <com.derp.support.preference.SystemSettingSwitchPreference
            android:key="smart_media_artwork_blur"
            android:title="@string/smart_media_artwork_blur_title"
            android:summary="@string/smart_media_artwork_blur_summary"
            android:defaultValue="false" />

        <com.derp.support.preference.CustomSystemSeekBarPreference
            android:key="smart_media_artwork_blur_radius"
            android:title="@string/smart_media_artwork_blur_radius_title"
            android:dependency="smart_media_artwork_blur"
            settings:allowEditText="true"
            android:max="25"
            android:min="0"
            android:defaultValue="25"
            settings:units="dp"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="smart_media_font"
        android:title="@string/smart_media_font_title">

        <ListPreference
            android:key="smart_media_title_font"
            android:title="@string/smart_media_title_font_title"
            android:dialogTitle="@string/smart_media_title_font_dialog_title"
            android:entries="@array/lock_clock_fonts_entries"
            android:entryValues="@array/lock_clock_fonts_values"
            android:summary="@string/smart_media_title_font_summary"
            android:persistent="false" />

        <ListPreference
            android:key="smart_media_artist_font"
            android:title="@string/smart_media_artist_font_title"
            android:dialogTitle="@string/smart_media_artist_font_dialog_title"
            android:entries="@array/lock_clock_fonts_entries"
            android:entryValues="@array/lock_clock_fonts_values"
            android:summary="@string/smart_media_artist_font_summary"
            android:persistent="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="smart_media_auto_functions"
        android:title="@string/smart_media_auto_functions_title">
        
        <com.derp.support.preference.CustomSystemSeekBarPreference
            android:key="smart_media_auto_show"
            android:title="@string/smart_media_auto_show_title"
            android:dependency="synth_smart_media"
            settings:allowEditText="true"
            android:max="10"
            android:min="0"
            android:defaultValue="0"
            settings:units="sec"/>

        <com.derp.support.preference.CustomSystemSeekBarPreference
            android:key="smart_media_auto_hide"
            android:title="@string/smart_media_auto_hide_title"
            android:dependency="synth_smart_media"
            settings:allowEditText="true"
            android:max="10"
            android:min="0"
            android:defaultValue="5"
            settings:units="sec"/>
    </PreferenceCategory>

</PreferenceScreen>
